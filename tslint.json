{
  "extends": [
    "tslint:recommended"
  ],
  "rulesDirectory": [
    "node_modules/codelyzer",
    "./tslint-rules"
  ],
  "rules": {
    "block-separator": true,
    "max-classes-per-file": false,
    "ban-types": [
      true,
      ["String", "Use string instead"],
      ["Object", "Use {} instead"]
    ],
    "member-access": true,
    "member-ordering": [
      true,
      {
        "order": [
          "public-static-field",
          "public-instance-field",
          "public-constructor",
          "private-static-field",
          "private-instance-field",
          "public-instance-method",
          "protected-instance-method",
          "private-instance-method"
        ]
      }
    ],
    "no-non-null-assertion": true,
    "no-parameter-reassignment": true,
    "curly": [true],
    "label-position": true,
    "no-conditional-assignment": true,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-debugger": true,
    "no-empty": false,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-object-literal-type-assertion": true,
    "no-shadowed-variable": true,
    "no-sparse-arrays": true,
    "no-this-assignment": true,
    "no-var-keyword": true,
    "no-any": true,
    "no-null-keyword": true,
    "triple-equals": true,
    "prefer-const": true,
    "array-type": [true, "array"],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "class-name": true,
    "comment-format": true,
    "file-name-casing": [true, "kebab-case"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "interface-name": false,
    "no-boolean-literal-compare": true,
    "no-unnecessary-callback-wrapper": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "one-line": [true, "check-else", "check-open-brace", "check-whitespace"],
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-method-signature": true,
    "space-before-function-paren": false,
    "variable-name": [true, "ban-keywords"],
    "align": [true, "arguments", "parameters", "statements"],
    "import-spacing": true,
    "indent": [true, "spaces", 4],
    "max-line-length": [true, 140],
    "newline-before-return": true,
    "no-consecutive-blank-lines": true,
    "no-trailing-whitespace": [true, "ignore-comments", "ignore-blank-lines"],
    "quotemark": [true, "double"],
    "semicolon": [true, "always"],
    "trailing-comma": false,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-typecast"],
    "no-output-on-prefix": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "component-class-suffix": true,
    "max-inline-declarations": true,
    "decorator-not-allowed": true,
    "contextual-life-cycle": true,
    "directive-class-suffix": true,
    "import-destructuring-spacing": true,
    "no-lifecycle-call": true,
    "no-output-named-after-standard-event": true,
    "pipe-impure": true,
    "prefer-inline-decorator": true,
    "banana-in-box": true,
    "no-template-call-expression": true,
    "trackBy-function": true,
    "enforce-component-selector": true,
    "use-view-encapsulation": true
  }
}
